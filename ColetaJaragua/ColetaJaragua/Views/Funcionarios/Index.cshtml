                @Html.DisplayFor(modelItem => item.Tb_Tipo_Associado.Descricao_Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tb_Banco.Descricao_Banco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Agencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conta_Corrente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Codigo_Coletor }) |
                @Html.ActionLink("Detalhar", "Details", new { id = item.Codigo_Coletor }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Codigo_Coletor })
            </td>
        </tr>
    }

